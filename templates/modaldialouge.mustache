<div class="">
    {{^tickets}}
        <div class="alert alert-warning" role="alert">
          {{#str}}no_tickets_found, local_tickets{{/str}}
        </div>
    {{/tickets}}
    <div class="table-responsive-md mt-2">
        <table class="table tickets-table">
            <thead>
                <tr>
                    <th>{{#str}}id, local_tickets{{/str}}</th>
                    <th>{{#str}}title, local_tickets{{/str}}</th>
                    <th>{{#str}}description, local_tickets{{/str}}</th>
                    <th>{{#str}}status, local_tickets{{/str}}</th>
                    <th>{{#str}}created_at, local_tickets{{/str}}</th>
                    <th>{{#str}}operation, local_tickets{{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#tickets}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td class="status status-{{status}}">
                            <a href="#" class="text-reset text-decoration-none" data-action="openchangestatusform" data-ticket-id="{{id}}">{{localizedstatus}}</a>
                        </td>
                        <td>{{created_at}}</td>
                        <td>
                            <a href="{{globals.config.wwwroot}}/local/tickets/view.php?id={{id}}" type="button" class="p-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                                </svg>
                            </a>
                            <a class="text-danger p-2 delete-ticket" href="#" data-ticket-id="{{id}}" type="button" class="btn btn-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {{/tickets}}
            </tbody>
        </table>
    </div>
</div>